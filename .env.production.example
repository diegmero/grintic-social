# Production Environment Variables for Dokploy
# Copy these to Dokploy environment settings

# Database Configuration
DATABASE_URL=postgresql://grintic_user:CHANGE_THIS_PASSWORD@postgres:5432/grintic_prod
POSTGRES_USER=grintic_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=grintic_prod

# Phoenix Configuration
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=GENERATE_WITH_MIX_PHX_GEN_SECRET

# Domain Configuration
PHX_HOST=grintic.com
PORT=4000
PHX_SERVER=true

# Environment
MIX_ENV=prod
POOL_SIZE=10
